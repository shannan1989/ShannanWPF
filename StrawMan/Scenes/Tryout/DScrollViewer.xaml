<self:SNDialog x:Class="Shannan.StrawMan.DScrollViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:self="clr-namespace:Shannan.StrawMan"
        mc:Ignorable="d"
        Title="ScrollViewer" Height="600" Width="800">
    <Grid x:Name="container" Height="600" Width="800">
        <ScrollViewer x:Name="scroller">
            <StackPanel Orientation="Horizontal">
                <Border Width="{Binding ElementName=container,Path=ActualWidth}" Height="{Binding ElementName=container,Path=ActualHeight}" Background="Red" />
                <Border Width="{Binding ElementName=container,Path=ActualWidth}" Height="{Binding ElementName=container,Path=ActualHeight}" Background="Green" />
                <Border Width="{Binding ElementName=container,Path=ActualWidth}" Height="{Binding ElementName=container,Path=ActualHeight}" Background="Blue" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</self:SNDialog>
